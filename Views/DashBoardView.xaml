<UserControl x:Class="G7CP.Views.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G7CP.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Height="auto"  Width="auto">
    <Grid>
        <ui:NavigationView x:Name="nvSample6"
                           Height="460"
                           SelectionChanged="NavigationView_SelectionChanged"
                           PaneDisplayMode="Top" Grid.ColumnSpan="2">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Tag="HomePage" />
                <ui:NavigationViewItem Content="My Shop" Tag="MyShopPage" />
                <ui:NavigationViewItem Content="Hot Deal" Tag="HotDealPage" />
                <ui:NavigationViewItem Content="Cart" Tag="CartPage" />
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.AutoSuggestBox>
                <ui:AutoSuggestBox QueryIcon="Find" 
                                   AutomationProperties.Name="Search"
                                   Width="150"/>
            </ui:NavigationView.AutoSuggestBox>
            <ui:NavigationView.PaneFooter>
                <StackPanel Orientation="Horizontal">
                    <ui:NavigationViewItem  Icon="Contact" 
                                        ToolTipService.ToolTip="Account" 
                                        Tag="AccountPage"
                                        Width="40"/>
                    <ui:NavigationViewItem  Icon="Message" 
                                        ToolTipService.ToolTip="Message" 
                                        Tag="MessagePage"
                                        Width="40"/>
                </StackPanel>
                
            </ui:NavigationView.PaneFooter>
            <ui:NavigationView.Content>
                <ui:Frame x:Name="contentFrame"/>
            </ui:NavigationView.Content>
        </ui:NavigationView>
    </Grid>
</UserControl>
